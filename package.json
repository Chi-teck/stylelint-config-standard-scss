{
  "name": "stylelint-config-standard-scss",
  "version": "1.1.0",
  "description": "The standard shareable SCSS config for Stylelint",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "standard",
    "scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint-scss/stylelint-config-standard-scss.git"
  },
  "license": "MIT",
  "author": "Stylelint SCSS",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "release": "np",
    "test": "jest",
    "watch": "jest --watch"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "globals": {
      "module": true,
      "require": true
    }
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "dependencies": {
    "stylelint-config-recommended-scss": "github:niksy/stylelint-config-recommended-scss#stylelint-v14",
    "stylelint-config-standard": "github:stylelint/stylelint-config-standard#add-rules"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-stylelint": "^14.0.0",
    "jest": "^27.1.0",
    "np": "^7.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "remark-cli": "^10.0.0",
    "stylelint": "github:stylelint/stylelint#v14"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  }
}
